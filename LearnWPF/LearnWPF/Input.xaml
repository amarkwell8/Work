<Page x:Class="LearnWPF.Input"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnWPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Input">

    <Grid Background="DarkSlateGray" Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Name="TextBox1" Grid.Column="0" Grid.Row="1" Width="125" Height="25"></TextBox>
        <Button Name="Button1" Grid.Column="0" Grid.Row="2" Width="50" Height="20" Click="Button1_Click">Input 1</Button>
        <TextBox Name="TextBox2" Grid.Column="1" Grid.Row="1" Width="125" Height="25"></TextBox>
        <Button Name="Button2" Grid.Column="1" Grid.Row="2" Width="50" Height="20" Click="Button2_Click">Input 2</Button>
        <Button Name="SubmitButton" Grid.Column="0" Grid.Row="4" Width="75" Height="20" Click="Submit">Submit</Button>
    </Grid>
</Page>
